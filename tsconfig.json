{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": false,
        "target": "ES6",
        "alwaysStrict": true,
        "baseUrl": "./package",
        "rootDir": "./package",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "package/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
